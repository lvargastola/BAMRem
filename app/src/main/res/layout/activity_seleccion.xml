<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/bienvenida"
    tools:context=".SeleccionActivity">

    <Button
        android:id="@+id/button_agilidad"
        android:layout_width="133dp"
        android:layout_height="207dp"
        android:layout_marginBottom="84dp"
        android:onClick="toGame"
        android:text="Agilidad Verbal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_video"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_video"
        android:layout_width="140dp"
        android:layout_height="207dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="84dp"
        android:onClick="toVideo"
        android:text="Video Cotidiano"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>